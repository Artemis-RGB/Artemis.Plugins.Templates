{
    "$schema": "http://json.schemastore.org/template",
    "name": "Artemis Plugin - Module",
    "description": "Creates a new Artemis Plugin Module.",
    "author": "diogotr7",
    "shortName": "artemis-plugin-module",
    "identity": "Artemis.Plugins.Modules.Template",
    "classifications": [
        "Artemis",
        "Plugin"
    ],
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "Artemis.Plugins.Modules.Template",
    "defaultName": "Artemis.Plugins.Modules.Module",
    "preferNameDirectory": true,
    "guids": [
        "33E90CC9-8BF3-45A3-B2CF-EE66D50D2775"
    ],
    "symbols": {
        "pluginName": {
            "displayName": "Plugin Name",
            "type": "parameter",
            "replaces": "__PluginName__",
            "isRequired": false,
            "datatype": "text",
            "description": "The name of the plugin shown in the UI",
            "defaultValue": "Plugin Name"
        },
        "pluginDescription": {
            "displayName": "Plugin Description",
            "type": "parameter",
            "replaces": "__PluginDescription__",
            "isRequired": false,
            "datatype": "text",
            "description": "The description of the plugin shown in the UI",
            "defaultValue": "Plugin Description"
        },
        "author": {
            "displayName": "Author",
            "type": "parameter",
            "replaces": "__Author__",
            "isRequired": false,
            "datatype": "text",
            "description": "The author of the plugin",
            "defaultValue": ""
        },
        "website": {
            "displayName": "Website",
            "type": "parameter",
            "replaces": "__Website__",
            "isRequired": false,
            "datatype": "text",
            "description": "The website of the plugin",
            "defaultValue": ""
        },
        "repository": {
            "displayName": "Repository",
            "type": "parameter",
            "replaces": "__Repository__",
            "isRequired": false,
            "datatype": "text",
            "description": "The repository of the plugin",
            "defaultValue": ""
        },
        "moduleName": {
            "displayName": "Module Name",
            "type": "parameter",
            "replaces": "__ModuleName__",
            "fileRename": "__ModuleName__",
            "isRequired": true,
            "datatype": "text",
            "description": "The name of the module. (Do not include the word 'Module' in the name)",
            "defaultValue": "Custom"
        }
    }
}