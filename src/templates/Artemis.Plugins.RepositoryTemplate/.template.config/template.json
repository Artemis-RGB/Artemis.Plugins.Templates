{
    "$schema": "http://json.schemastore.org/template",
    "name": "Artemis Plugin - Repository",
    "description": "Creates a repository for an Artemis plugin, with gitignore and Github Actions built in.",
    "author": "diogotr7",
    "shortName": "artemis-plugin-repo",
    "identity": "Artemis.Plugins.RepositoryTemplate",
    "classifications": [
        "Artemis",
        "Plugin"
    ],
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "sourceName": "Artemis.Plugins.RepositoryTemplate",
    "defaultName": "Artemis.Plugins.MyPlugin",
    "primaryOutputs": [
        { "path": "sln/Artemis.Plugins.sln" }
    ],

    "guids": [
        "33E90CC9-8BF3-45A3-B2CF-EE66D50D2775",
        "388738F7-345C-4E00-ADCF-2D5F8E99DCAD"
    ],
    "symbols": {
        "pluginName": {
            "displayName": "Plugin Name",
            "type": "parameter",
            "replaces": "__PluginName__",
            "isRequired": false,
            "datatype": "string",
            "description": "The name of the plugin shown in the UI",
            "defaultValue": "Plugin Name"
        },
        "pluginDescription": {
            "displayName": "Plugin Description",
            "type": "parameter",
            "replaces": "__PluginDescription__",
            "isRequired": false,
            "datatype": "string",
            "description": "The description of the plugin shown in the UI",
            "defaultValue": "Plugin Description"
        },
        "author": {
            "displayName": "Author",
            "type": "parameter",
            "replaces": "__Author__",
            "isRequired": false,
            "datatype": "string",
            "description": "The author of the plugin",
            "defaultValue": ""
        },
        "website": {
            "displayName": "Website",
            "type": "parameter",
            "replaces": "__Website__",
            "isRequired": false,
            "datatype": "string",
            "description": "The website of the plugin",
            "defaultValue": ""
        },
        "repository": {
            "displayName": "Repository",
            "type": "parameter",
            "replaces": "__Repository__",
            "isRequired": false,
            "datatype": "string",
            "description": "The repository of the plugin",
            "defaultValue": ""
        }
    },
    "sources": [
        {
            "rename": {
                "gitignore.txt": ".gitignore"
            }
        }
    ]
}